<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_3x3_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uottawa.tictactoe.Activity.GameActivities.Grid3x3BoardActivity"
    tools:showIn="@layout/activity_3x3_grid"
    android:background="@drawable/background1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_below="@+id/Grid3x3_btnRefresh"
            android:layout_toStartOf="@+id/linearLayout13"
            android:layout_marginEnd="22dp"
            android:layout_weight="1"
            android:id="@+id/Grid3x3_Player1"
            android:elevation="0dp"
            android:keepScreenOn="false"
            android:clickable="false">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/avatar1"
                android:background="@android:drawable/screen_background_light_transparent"
                android:layout_height="60dp"
                android:id="@+id/Grid3x3_Player1Avatar" />

            <TextView
                android:text="Player 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:backgroundTint="@android:drawable/status_bar_item_background"
                android:textAlignment="center"
                android:id="@+id/Grid3x3_Player1Name" />

            <TextView
                android:text="X"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center"
                android:id="@+id/Grid3x3_Player1Symbol" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:weightSum="1"
            android:id="@+id/Grid3x3_Player2">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/avatar1"
                android:background="@android:drawable/screen_background_light_transparent"
                android:layout_height="60dp"
                android:id="@+id/Grid3x3_Player2Avatar" />

            <TextView
                android:text="Player 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:backgroundTint="@android:drawable/status_bar_item_background"
                android:textAlignment="center"
                android:id="@+id/Grid3x3_Player2Name" />

            <TextView
                android:text="O"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center"
                android:id="@+id/Grid3x3_Player2Symbol" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_marginTop="28dp"
        android:layout_below="@id/Grid3x3_btnRefresh"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/Grid3x3_board_0_0"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_0_1"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_0_2"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_1_0"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_1_1"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_1_2"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_2_0"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_2_1"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/Grid3x3_board_2_2"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                android:soundEffectsEnabled="false"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/refresh2"
        android:id="@+id/Grid3x3_btnRefresh"
        android:onClick="Grid3x3_ResetButton"
        android:background="@android:drawable/screen_background_light_transparent"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:soundEffectsEnabled="false"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/Grid3x3_Star_Player1"
        android:layout_marginStart="26dp"
        android:background="@android:drawable/picture_frame"
        android:backgroundTint="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Grid3x3_btnRefresh" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Grid3x3_loading"
        android:layout_alignTop="@+id/Grid3x3_Star_Player1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/Grid3x3_Star_Player2"
        android:background="@android:drawable/picture_frame"
        android:backgroundTint="@android:color/black"
        android:layout_marginStart="28dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/Grid3x3_loading" />

</RelativeLayout>
