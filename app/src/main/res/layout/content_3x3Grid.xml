<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uottawa.tictactoe.Activity.GameActivities.EasyGameActivity"
    tools:showIn="@layout/activity_3x3Grid"
    android:background="@drawable/background6">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_below="@+id/imageButton10"
            android:layout_toStartOf="@+id/linearLayout13"
            android:layout_marginEnd="22dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:srcCompat="@drawable/avatar1"
                android:id="@+id/imageView3"
                android:background="@android:drawable/screen_background_light_transparent" />

            <TextView
                android:text="Player 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:backgroundTint="@android:drawable/status_bar_item_background"
                android:textAlignment="center" />

            <TextView
                android:text="X"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_marginEnd="14dp"
            android:layout_below="@+id/imageButton10"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:weightSum="1"
            android:backgroundTint="@color/highlight_yellow">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="51dp"
                app:srcCompat="@drawable/avatar1"
                android:id="@+id/imageView4"
                android:background="@android:drawable/screen_background_light_transparent" />

            <TextView
                android:text="Player 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:backgroundTint="@android:drawable/status_bar_item_background"
                android:textAlignment="center" />

            <TextView
                android:text="O"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginEnd="62dp"
        android:id="@+id/imageView2"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageButton10"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:backgroundTint="@color/pink" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button9"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />

            <Button
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/button7"
                android:layout_weight="1"
                android:backgroundTint="@color/pink" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/refresh2"
        android:id="@+id/imageButton10"
        android:layout_width="wrap_content"
        android:layout_weight="1.50"
        android:background="@android:drawable/screen_background_light_transparent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
