<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_level_difficulty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uottawa.tictactoe.Activity.GameActivities.SinglePlayer.LevelDifficultyActivity"
    tools:showIn="@layout/activity_level_difficulty"
    android:background="@drawable/background1">

    <TextView
        android:text="Level Difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/levelDifficulty_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:textColor="@color/pink"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/pink" />

    <Button
        android:text="Easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/levelDifficulty_btnEasy"
        android:layout_weight="0.08"
        android:onClick="btn_easy"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:backgroundTint="@color/pink"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:layout_below="@+id/levelDifficulty_title"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/levelDifficulty_btnHard"
        android:layout_weight="0.09"
        android:onClick="btn_hard"
        android:backgroundTint="@color/pink"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/levelDifficulty_btnMedium"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/levelDifficulty_btnMedium"
        android:layout_weight="0.05"
        android:onClick="btn_medium"
        android:backgroundTint="@color/pink"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/levelDifficulty_btnEasy"
        android:layout_alignParentStart="true" />

</RelativeLayout>
