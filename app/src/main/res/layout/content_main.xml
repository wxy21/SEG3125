<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uottawa.tictactoe.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView5" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.12"
        android:layout_alignParentBottom="true"
        android:layout_height="400dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <Button
                android:text="Play"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/btnSinglePlayer"
                android:layout_weight="0.12"
                android:onClick="btnSinglePlayer"
                style="@android:style/Widget.Material.Light.Button"
                android:textSize="36sp"
                android:textColor="@android:color/white"
                android:textStyle="normal|bold"
                android:backgroundTint="@color/pink" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <Button
                    android:id="@+id/button10"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:background="@drawable/crown"
                    android:layout_width="45dp" />

                <Button
                    android:text="MultiPlayer"
                    android:layout_height="80dp"
                    android:id="@+id/btnMultiPlayer"
                    android:layout_weight="1"
                    android:onClick="btnMultiPlayer"
                    android:layout_width="200dp"
                    android:backgroundTint="@color/pink"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:text="Match History"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/btnMatchHistory"
                android:layout_weight="0.13"
                android:onClick="btnMatchHistory"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/pink"
                android:textSize="30sp" />

            <Button
                android:text="Help"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/btnHelp"
                android:layout_weight="0.13"
                android:onClick="btnHelp"
                android:backgroundTint="@color/pink"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white" />

            <Button
                android:text="Option"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/btnOption"
                android:layout_weight="0.12"
                android:backgroundTint="@color/pink"
                android:textSize="30sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
